@model ProductVM

<div class="card shadow border-0 mt-4" dir="ltr">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
         <div class="row">
             <div class="col-12 text-center">
                 <h2 class="text-primary" dir="rtl">@(Model.Product.Id != 0? "بروزرسانی غذا" : "ایجاد غذا")</h2>
             </div>
         </div>
    </div>

    <div class="card-body p-4">
        <form method="post" class="row" dir="rtl">
            <input asp-for="Product.Id" hidden />
            <div class="border p-3">
                <div class="form-floating py-2 col-12" dir="rtl">
                    <input asp-for="Product.Name" class="form-control border-0 shadow" />
                    <label asp-for="Product.Name" class="ms-2"></label>
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12" dir="auto">
                    <input asp-for="Product.Description" class="form-control border-0 shadow" />
                    <label asp-for="Product.Description" class="ms-2"></label>
                    <span asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12" dir="auto">
                    <input asp-for="Product.Price" class="form-control border-0 shadow" />
                    <label asp-for="Product.Price" class="ms-2"></label>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12" dir="auto">
                    <input asp-for="Product.Count" class="form-control border-0 shadow" />
                    <label asp-for="Product.Count" class="ms-2"></label>
                    <span asp-validation-for="Product.Count" class="text-danger"></span>
                </div>

                <div class="form-floating py-2 col-12">
                    <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                        <option disabled selected>--انتخاب دسته بندی--</option>
                    </select>
                    <label asp-for="Product.CategoryId" class="ms-2"></label>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
            </div>

            <div class="row pt-2" dir="ltr">
                <div class="col-6 col-md-3">
                    @if(Model.Product.Id !=0){
                        <button type="submit" class="btn btn-primary form-control">
                            بروزرسانی
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary form-control">
                            ساختن
                        </button>
                    }

                </div>

                <div class="col-6 col-md-3" dir="ltr">
                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary form-control">
                        بازگشت
                    </a>
                </div>

        </form>

    </div>
</div>
