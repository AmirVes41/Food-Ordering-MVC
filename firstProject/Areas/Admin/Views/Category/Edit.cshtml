@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary" dir="auto">ویرایش دسته بندی</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    
                </div>
                @*<div asp-validation-summary="ModelOnly"></div>*@
                <div class="mb-3" dir="auto">
                    <label asp-for="Name" class="p-0"></label>
                    <input asp-for="Name" tepy="text" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger" dir="auto"></span>
                </div>
                <div class="mb-3" dir="auto">
                    <label asp-for="DisplayOrder" class="p-0"></label>
                    <input asp-for="DisplayOrder" tepy="text" class="form-control" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-primary form-control">
                            بروزرسانی
                        </button>
                    </div>

                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">
                            بازگشت
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




<! client side validation >
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}