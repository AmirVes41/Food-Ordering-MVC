@model List<Category>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary" dir="auto"> دسته بندی غذا ها</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row">
 

            <div class="col-6">
                <a asp-controller="Category" asp-action="Create" class="btn btn-dark">
                    <i class="bi bi-plus-circle"> ایجاد دسته جدید  </i>
                </a>
            </div>
        </div>

        <table class=" table table-bordered table-striped" dir="auto">
            <thead>
                <tr>
                    <th>
                        نوع غذا
                    </th>
                    <th>
                        کد غذا
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var @obj in Model.OrderBy(u => u.Name))
                {
                    <tr>
                       
                        <td>@obj.Name</td>
                        <td>@obj.DisplayOrder</td>
                         <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2">
                                    <i class="bi bi-pencil-square"></i> ویرایش
                                </a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> حذف
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<div class="container" >

</div>