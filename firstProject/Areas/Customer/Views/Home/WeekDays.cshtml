@{
    // Get the first element of the list
    var firstDayString = Model[0];
    DateOnly? firstDayDate = null;

    // Parse the firstDayString into DateOnly
    if (!string.IsNullOrEmpty(firstDayString))
    {
        firstDayDate = DateOnly.Parse(firstDayString);
    }
}

<h1>Days until next Wednesday starting from @firstDayDate.Value.DayOfWeek</h1>

<div class="container mt-4">
    <div class="row">
        @foreach (var day in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5 class="card-title">@day</h5>
                        <a href="customer/Home/Index/@day" class="btn btn-primary mt-2">انتخاب غذا</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>